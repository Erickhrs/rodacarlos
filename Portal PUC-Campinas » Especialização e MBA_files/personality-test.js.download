        if (!isValidEmail(userEmail)) {
            showValidationError('#test-validation-error', 'O endere√ßo de e-mail informado n√£o parece ser v√°lido.');
            return;
        }

        const phoneDigits = userPhone.replace(/\D/g, '');
        if (phoneDigits.length < 10) {
            showValidationError('#test-validation-error', 'O telefone precisa ter o DDD e o n√∫mero completo.');
            return;
        }
        
        // Validar CEP
        const cepDigits = userCep.replace(/\D/g, '');
        if (cepDigits.length !== 8) {
